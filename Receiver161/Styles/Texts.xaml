<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Receiver161.Styles">


    <Style x:Key="RequestStyle" TargetType="{x:Type Control}">
        <Setter Property = "Height" Value="auto"/>
        <Setter Property = "FontSize" Value="20"/>
        <Setter Property = "Background" Value="Transparent"/>
        <Setter Property = "BorderThickness" Value="0"/>
    </Style>

    <Style x:Key="RequestText" TargetType="TextBox" 
           BasedOn="{StaticResource RequestStyle}">
        <Setter Property = "Padding" Value="10 5"/>
        <Setter Property = "FontSize" Value="20"/>
        <Setter Property = "IsReadOnly" Value="True"/>
        <!--<Setter Property = "Text" Value="header"/>-->
    </Style>

    <Style x:Key="RequestButton" TargetType="Button" 
           BasedOn="{StaticResource RequestStyle}">
        <Setter Property = "FontSize" Value="20"/>
        <Setter Property = "FontFamily" Value="{StaticResource FontAwesome}"/>
    </Style>

</ResourceDictionary>