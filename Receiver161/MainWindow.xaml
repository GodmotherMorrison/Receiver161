<Window x:Class="Receiver161.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Receiver161"
        Title="" Height="600" Width="1000">
    
    <Grid x:Name="Grid"
          Width="1000">
        <Grid.RowDefinitions></Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.9*"></ColumnDefinition>
            <ColumnDefinition Width="0.1*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <local:PanelSearch x:Name="PanelSearch"
            Grid.Column="0"
            HorizontalAlignment="Left"
            Width="600"
            MouseDoubleClick="PanelSearch_MouseDoubleClick"/>

        <!--<local:UserControl1
            Grid.Column="0"
            x:Name="PanelMessage"
            HorizontalAlignment="Right"

            Height="400"/>-->

        <local:PanelSearch x:Name="PanelMessage"
            Grid.Column="0"
            HorizontalAlignment="Right"
            Width="600"
            MouseDoubleClick="PanelSearch_MouseDoubleClick"/>

        <local:Cover x:Name="Cover"
            Grid.Column="0"
            HorizontalAlignment="Left" 
            Panel.ZIndex="0" MouseDoubleClick="Cover_MouseDoubleClick"
            Width="300">

        </local:Cover>

        <StackPanel
            Grid.Column="1"
            Background="PaleVioletRed"/>

    </Grid>
</Window>
